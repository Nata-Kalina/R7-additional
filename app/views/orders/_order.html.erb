<div id="<%=dom_id order%>">

<table style="border-collapse: collapse; width: 100%; border: 1px solid #000;">

  <thead>
    <tr>
      <th style="border: 1px solid #000;">Order ID</th>
      <th style="border: 1px solid #000;">Product Name</th>
      <th style="border: 1px solid #000;">Product Count</th>
      <th style="border: 1px solid #000;">Customer ID</th>
      <th colspan="3" style="border: 1px solid #000;">Actions</th>
    </tr>
  </thead>

  <tbody>
   
      <tr>
        <td style="border: 1px solid #000;"><%= order.id %></td>
        <td style="border: 1px solid #000;"><%= order.product_name %></td>
        <td style="border: 1px solid #000;"><%= order.product_count %></td>
        <td style="border: 1px solid #000;"><%= order.customer_id %></td>
        <td style="border: 1px solid #000;"><%= link_to 'Show', order %></td>
        <td style="border: 1px solid #000;"><%= link_to 'Edit', order %></td>
        <td style="border: 1px solid #000;"><%= button_to 'Delete', order, method: :delete, data: {turbo_confirm: "Are you sure?" } %></td>
      </tr>
    
  </tbody>
</table>
<p><%= link_to "Add Order", new_order_path %></p>
</div>

