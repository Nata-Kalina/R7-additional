<p style="color: green"><%= notice %></p>

<%= render @customer %>

<div>
  <%= link_to "Edit this customer", edit_customer_path(@customer) %> |
  <%= link_to "Back to customers", customers_path %>
  <%= button_to "Destroy this customer", @customer, method: :delete %>
</div>


<div id="orders">
  <h3>Orders:</h3>
  <% if @customer.orders.present? %>
  <table style="border-collapse: collapse; width: 100%; border: 1px solid #000;">
  <thead>
    <tr>
      <th style="border: 1px solid #000;">Order ID</th>
      <th style="border: 1px solid #000;">Product Name</th>
      <th style="border: 1px solid #000;">Product Count</th>
      <th style="border: 1px solid #000;">Customer ID</th>
      <th colspan="3" style="border: 1px solid #000;">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @customer.orders.each do |order| %>
      <%= render order %>
    <% end %>
  </tbody>
  </table>
  <%= link_to "Add Order", new_order_path %>
  <% else %>
    <p>No orders</p>
    <%= link_to "Create Order", new_order_path %>
  <% end %>

</div>






